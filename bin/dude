#!/usr/bin/env node

// TODO
// base framework folder (contains out dudejs framework)
// rename helper to renderer
// clean up & refactor application
// Error handling for commands


'use strict';
var cli = require('../lib/utils/cli'),
    chalk = require('chalk'),
    args = cli.read(process.argv.slice(2));

var commands = args.commands;
var options = args.options;

var command = commands.shift();
var argument = commands.join(' ');

if(command === undefined || command){
    switch(command){
        case 'new':
            cli.make(argument);
            break;
        case 'install':
            cli.install(argument, options);
            break;
        case 'version':
            cli.version();
            break;
        default:
            cli.help(argument);
    }
} else {
    console.log(chalk.red('Error: ' + 'Unrecognized command ' + command));
    process.exit(1);
}


