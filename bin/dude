#!/usr/bin/env node

// TODO
// utilities folder (cli, template)
// base templates folder (helpers, std)
// base framework folder (contains out dudejs framework)
// rename helper to renderer

'use strict';
var cli = require('../lib/cli/cli'),
    args = cli.read(process.argv.slice(2));

var commands = args.commands;
var options = args.options;

var command = commands.shift();
var argument = commands.join(' ');

switch(command){
    case 'new':
        cli.make(argument);
        break;
    case 'install':
        cli.install(argument, options);
        break;
    case 'version':
        cli.version();
        break;
    default:
        cli.help(argument);
}

//console.log(carg);
//console.log(options);